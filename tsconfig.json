{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",                  // use ESNext modules
    "moduleResolution": "bundler",       // allows TS to resolve without .js
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"]
}
